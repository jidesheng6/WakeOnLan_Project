<?xml version="1.0" encoding="gbk" ?>
<RelativeLayout 
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="25px"
    android:minHeight="25px"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC地址："
        android:id = "@+id/t1"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:layout_marginTop="166.8dp"
        android:layout_marginLeft="24.8dp"
        android:layout_marginRight="90.3dp" 
    />
    <EditText
        android:layout_width="235.4dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="155.4dp"
        android:layout_marginLeft="144.0dp" 
        android:id="@+id/Mac_AddressText"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "开机"
        android:textSize = "@dimen/abc_action_bar_content_inset_material"
        android:id="@+id/OpenButton"
        android:layout_marginTop="233.0dp"
        android:layout_marginLeft="39.1dp" 
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "关机"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:layout_marginTop="235.5dp"
        android:layout_marginLeft="272.3dp" 
        android:id="@+id/CloseButton"
    />
</RelativeLayout>